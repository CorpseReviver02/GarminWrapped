{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,

    "incremental": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Keep strong safety; you're already guarding indexes/optionals in code
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // Build stability/perf
    "skipLibCheck": true,

    // Nice to have
    "useUnknownInCatchVariables": true,

    // Next plugin for type hints
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
